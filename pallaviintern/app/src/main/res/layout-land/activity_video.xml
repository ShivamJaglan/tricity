<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_bg"
    tools:context=".VideoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="10dp"
        app:titleTextColor="@color/white"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:layout_below="@id/toolbar"/>

    <TextView
        android:id="@+id/video_name"
        android:textColor="@color/white"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@id/video_thumbnail"
        android:layout_below="@id/toolbar"/>

    <TextView
        android:id="@+id/video_description"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/video_thumbnail"
        android:layout_below="@id/video_name"/>

    <Button
        android:id="@+id/play_preview_btn"
        android:text="@string/play_preview"
        android:textAllCaps="false"
        android:drawableStart="@drawable/play"
        android:gravity="start|center"
        android:textColor="@color/dark"
        android:paddingVertical="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@id/video_thumbnail"
        android:layout_below="@id/video_description"/>

    <Button
        android:id="@+id/play_video_btn"
        android:text="@string/play"
        android:textAllCaps="false"
        android:drawableStart="@drawable/play"
        android:gravity="start|center"
        android:textColor="@color/dark"
        android:paddingVertical="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@id/video_thumbnail"
        android:layout_below="@id/play_preview_btn"/>

</RelativeLayout>